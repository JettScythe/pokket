<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">
    <ImageView
        android:id="@+id/bch_balance_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_bch"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/bch_balance_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        tools:text="0.0 BCH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bch_balance_imageview"
        app:layout_constraintBottom_toBottomOf="@id/bch_balance_imageview"
        app:layout_constraintStart_toEndOf="@id/bch_balance_imageview"/>

    <ImageView
        android:id="@+id/sbch_balance_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_sbch"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bch_balance_imageview" />
    <TextView
        android:id="@+id/sbch_balance_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        tools:text="0.0 BCH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sbch_balance_imageview"
        app:layout_constraintBottom_toBottomOf="@id/sbch_balance_imageview"
        app:layout_constraintStart_toEndOf="@id/sbch_balance_imageview"/>
    <Button
        android:id="@+id/swap_to_sbch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:shadowColor="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="@string/hop_to_sbch"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:elevation="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sbch_balance_imageview"/>
    <Button
        android:id="@+id/swap_to_bch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:shadowColor="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="@string/hop_to_bch"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:elevation="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sbch_balance_imageview"/>
</androidx.constraintlayout.widget.ConstraintLayout>